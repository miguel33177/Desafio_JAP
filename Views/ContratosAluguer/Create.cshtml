@model DesafioJAP.Models.ContratoAluguer

<h1 class="mt-4" style="margin-bottom: 40px;">Criar Contrato de Aluguer</h1>
<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
            <option value="">-- Selecione um Cliente --</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VeiculoId" class="control-label">Veiculo</label>
        <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.Veiculos">
            <option value="">-- Selecione um Veículo --</option>
        </select>
        <span asp-validation-for="VeiculoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataInicio" class="control-label">Data de Início do Aluguer</label>
        <input asp-for="DataInicio" class="form-control" type="date" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataFim" class="control-label">Data de Fim do Aluguer:</label>
        <input asp-for="DataFim" class="form-control" type="date" />
        <span asp-validation-for="DataFim" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Km" class="control-label">Quilometragem Inicial</label>
        <input asp-for="Km" class="form-control" value=" "/>
        <span asp-validation-for="Km" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger mt-3">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
    </div>
</form>
