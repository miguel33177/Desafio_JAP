@model DesafioJAP.Models.Cliente

<h1 class="mt-4" style="margin-bottom: 40px;" >Criar Cliente</h1>

<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" type="text" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="text" placeholder="example@domain.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone" class="control-label"></label>
        <input asp-for="Telefone" class="form-control" type="tel" placeholder="+351 912345678" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CartaConducao" class="control-label">Carta de Condução</label>
        <select asp-for="CartaConducao" class="form-control"
            asp-items="@(new SelectList(ViewBag.CategoriasCartaConducao))">
            <option value="">-- Selecione uma Categoria --</option>
        </select>
        <span asp-validation-for="CartaConducao" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form>
