@model DesafioJAP.Models.Cliente

<h1>Criar Cliente</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" class="form-control" id="Telefone" name="Telefone" value="@Model.Telefone" required />
    </div>
    <div class="form-group">
        <label asp-for="CartaConducao" class="control-label">Carta de Condução</label>
        <select asp-for="CartaConducao" class="form-control"
            asp-items="@(new SelectList(ViewBag.CategoriasCartaConducao))">
            <option value="">-- Selecione uma Categoria --</option>
        </select>
        <span asp-validation-for="CartaConducao" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
